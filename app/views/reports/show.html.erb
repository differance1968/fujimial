<p id="notice"><%= notice %></p>
<div class="container main-wrap">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 report-wrap">

<h2><%= @report.grade.name %>　<%= @report.subject.name %></h2>
<br>

<div class="report-content">
  <h3>ねらい</h3>
  <%= @report.aim %>
</div>
<br>

<div class="report-content">
  <h3>実践内容</h3>
  <%= @report.content %>
</div>
<br>

<div class="report-content">
  <h3>感想</h3>
  <%= @report.comment %>
</div>
<br>
<br>

<div>
  <%= link_to "資料をダウンロードする", @report.file.url if @report.file? %>
</div>
<br>
<br>
<br>
<br>

<%= button_to '編集', edit_report_path(@report), method: :get, :class=>"btn btn-default" %>
<%= button_to '削除', @report, method: :delete, data: { confirm: '本当に消しますか?' }, :class=>"btn btn-default" %>

</div>
<div class="col-md-1"></div>
</div>
</div>