<p id="notice"><%= flash[:notice]%></p>

<div class = "container main-wrap">
  <div class = "row">
    <div class = "col-md-1"></div>
      <div class = "col-md-7 left-wrap">
      <h2>理論・論文</h2>
        <% @theories.each do |theory| %>
        <div class = "article">
          <div class= "article_img">
           <%= link_to cl_image_tag(theory.picture.thumb), theory if theory.picture? %> 
          </div>
          <div class="article_text">
          <h3><%= link_to theory.title, theory,:class=>"link" %></h3>
            <p><%== theory.content.truncate(50) %></p>
          </div>
        </div>
         <% end %>
      <%= paginate @theories %>
    </div>
    
     <div class="col-md-3">
      <div class="submenu panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">新着記事</h3>
        </div>
        <% @theories_side.first(5).each do |theory| %>
        <div class="panel-body">
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to(theory.title, "/theories/#{theory.id}") %></li>
          </ul>
        </div>
        <% end %>
      </div>
      
      <div class="btn btn-default"><%= link_to "新規投稿", new_theory_path %></div>
    </div><!--col-->
    </div>
    </div>
   